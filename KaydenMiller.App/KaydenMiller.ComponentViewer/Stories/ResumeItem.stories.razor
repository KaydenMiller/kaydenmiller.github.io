@using KaydenMiller.Components
@attribute [Stories("Components/ResumeItem")]

<Stories TComponent="ResumeItem">
    <ArgType For="s => s.Title" Control="ControlType.Default"/>
    <ArgType For="s => s.DescriptionEmphasis" Control="ControlType.Default"/>
    <ArgType For="s => s.StartDate" Control="ControlType.Default"/>
    <ArgType For="s => s.EndDate" Control="ControlType.Default"/>
    <ArgType For="s => s.Points" Control="ControlType.Default"/>

    <Story Name="Default">
        <Arguments>
            <Arg For="s => s.Title" Value='"Kayden Miller"'/>
            <Arg For="s => s.DescriptionEmphasis" Value='"Innovative and Quality-Driven Software Engineer with 8+ years of experience"'/>
            <Arg For="s => s.StartDate" Value="DateTime.Today" />
            <Arg For="s => s.EndDate" Value="DateTime.Today" />
            <Arg For="s => s.Points" Value="ResumeItemPoints"/>
        </Arguments>

        <Template>
            <ResumeItem @attributes="context.Args"></ResumeItem>
        </Template>
    </Story>
    
    <Story Name="Chained">
        <Arguments>
            <Arg For="s => s.Title" Value='"Kayden Miller"'/>
            <Arg For="s => s.DescriptionEmphasis" Value='"Innovative and Quality-Driven Software Engineer with 8+ years of experience"'/>
            <Arg For="s => s.StartDate" Value="DateTime.Today" />
            <Arg For="s => s.EndDate" Value="DateTime.Today" />
        </Arguments>

        <Template>
            <ResumeItem @attributes="context.Args"></ResumeItem>
            <ResumeItem @attributes="context.Args"></ResumeItem>
        </Template>
    </Story>
    
    <Story Name="Include Month">
        <Arguments>
            <Arg For="s => s.Title" Value='"Kayden Miller"'/>
            <Arg For="s => s.DescriptionEmphasis" Value='"Innovative and Quality-Driven Software Engineer with 8+ years of experience"'/>
            <Arg For="s => s.StartDate" Value="DateTime.Today" />
            <Arg For="s => s.EndDate" Value="DateTime.Today" />
            <Arg For="s => s.IncludeMonth" Value="true" />
        </Arguments>

        <Template>
            <ResumeItem @attributes="context.Args"></ResumeItem>
        </Template>
    </Story>
    
    <Story Name="Start Date Only">
        <Arguments>
            <Arg For="s => s.Title" Value='"Kayden Miller"'/>
            <Arg For="s => s.DescriptionEmphasis" Value='"Innovative and Quality-Driven Software Engineer with 8+ years of experience"'/>
            <Arg For="s => s.StartDate" Value="DateTime.Today" />
            <Arg For="s => s.IncludeMonth" Value="true" />
        </Arguments>

        <Template>
            <ResumeItem @attributes="context.Args"></ResumeItem>
        </Template>
    </Story>
</Stories>

