@page "/about"

<MudGrid>
    <MudItem sm="6" lg="3">
        <MudPaper Class="pa-16 ma-2" Elevation="0">
            <MudText Typo="Typo.h3">LEARN ABOUT ME</MudText>
            <MudImage Src="@Constants.ImageUri"
                      Height="300"
                      Fluid="true"
                      Class="rounded-lg"
            />
        </MudPaper>
    </MudItem>
    
    <MudItem sm="6" lg="9">
        <MudPaper Class="pa-16 ma-2" Elevation="0">
            <MudText Typo="Typo.h5" Color="Color.Primary">Senior Software Engineer</MudText>
            <MudText Typo="Typo.body1">
                I am a software engineer who is passionate about his craft. I love the world of software and
                spend a large portion of my time teaching others or working on projects in this industry. Where
                I can I love to contribute to Open Source Software.
            </MudText>
        </MudPaper>
    </MudItem>
</MudGrid>

<MudPaper Class="pa-16 ma-2" Elevation="0">
    <MudText Typo="Typo.h5">My Skills</MudText>

    <MudGrid>
        @foreach (var skill in SkillItems)
        {
            <MudItem xs="12" sm="6">
                <Skill Name="@skill.Name" CompetenceLevel="@skill.Competency"></Skill>
            </MudItem>
        }
    </MudGrid>
</MudPaper>

<MudPaper Class="pa-16 ma-2" Elevation="0">
    <MudText Typo="Typo.h5">My Tools</MudText>

    <MudGrid>
        @foreach (var tool in ToolItems)
        {
        <MudItem xs="12" sm="4" md="3">
            <ToolChip Name="@tool.Name" Image="@tool.Path"></ToolChip>
        </MudItem>
        }
    </MudGrid>
</MudPaper>

@code {

    private List<SkillItem> SkillItems =
    [
        new SkillItem("C#", 95),
        new SkillItem(".NET", 95),
        new SkillItem("Blazor", 65),
        new SkillItem("ASP.NET Core WEBAPI",  90),
        new SkillItem("TypeScript", 75),
        new SkillItem("JavaScript", 65),
        new SkillItem("Angular", 75),
        new SkillItem("Rust", 35),
        new SkillItem("C++", 40),
    ];

    private List<ToolItem> ToolItems =
    [
        new ToolItem("JetBrains Rider", "./images/jetbrains.png"),
        new ToolItem("Docker", "./images/docker.jpg"),
        new ToolItem("Vim", "./images/vim.png"),
        new ToolItem("Visual Studio", "./images/visual-studio.png"),
        new ToolItem("Kubernetes", "./images/k8s.png"),
        new ToolItem("Jira", "./images/jira-1.svg"),
        new ToolItem("Git", "./images/git-logo.png"),
        new ToolItem("Datadog", "./images/datadog.png"),
    ];

    private record ToolItem(string Name, string Path);
    private record SkillItem(string Name, int Competency);
}